<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-950 text-white p-10">
        <nav class="w-[90%] md:w-[50%] flex gap-3 mb-8 mx-auto">
            <a class="text-blue-500 hover:underline transition" href="/">Go to home</a>
        </nav>
        <h1 class="mb-8 text-3xl w-fit mx-auto">All user</h1>
        <div class="w-[90%] flex flex-wrap gap-4 mx-auto py-4">
            <% if(Array.isArray(users)) { %>
                <% users.forEach((user)=> { %>
                    <div class="w-60 bg-zinc-700 rounded-lg px-4 py-5">
                        <div class="w-full bg-zinc-800 h-44 rounded-md overflow-hidden">
                            <img class="w-full h-full object-top object-cover" src="<%= user.image %>" alt="">
                        </div>
                        <h2 class="mt-3 text-2xl">
                            <%= user.name %>
                        </h2>
                        <h4 class="text-md text-zinc-400">
                            <%= user.email %>
                        </h4>
                        <div class="flex w-full justify-end gap-3 mt-6">
                            <a class="px-4 py-1 bg-green-500 hover:bg-green-600 transition rounded-md"
                                href="/edit/<%= user._id %>">Edit</a>
                            <a class="px-4 py-1 bg-red-500 hover:bg-red-600 transition rounded-md"
                                href="/delete/<%= user._id %>">Delete</a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>No users available.</p>
                            <% } %>
        </div>
    </div>
</body>

</html>